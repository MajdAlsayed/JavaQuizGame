<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="nl.inholland.quizgame.controller.LoginController"
           style="-fx-background-color: linear-gradient(to bottom, #f6f6f6, #eaeaea);">

    <VBox alignment="CENTER" spacing="15">
        <VBox alignment="CENTER" spacing="10" maxWidth="300"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 2);">

            <Label text="Login to Quiz Game"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

            <TextField fx:id="usernameField" promptText="Username"
                       prefHeight="35"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ccc;"/>

            <PasswordField fx:id="passwordField" promptText="Password"
                           prefHeight="35"
                           style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ccc;"/>

            <Button fx:id="loginButton"
                    text="Login"
                    onAction="#handleLogin"
                    prefWidth="140" prefHeight="35"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"
            />

            <Label fx:id="errorLabel"
                   textFill="red"
                   wrapText="true"
                   visible="false"
                   style="-fx-font-size: 13px;"/>

        </VBox>
    </VBox>
</StackPane>
