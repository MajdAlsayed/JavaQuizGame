<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="nl.inholland.quizgame.controller.StartController"
           style="-fx-background-color: linear-gradient(to bottom, #f8f8f8, #ebebeb);">

    <VBox alignment="CENTER" spacing="30" prefWidth="800">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Welcome -->
        <Label fx:id="welcomeLabel"
               text="Welcome, Majd!"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <!-- Score and Timer Row -->
        <HBox alignment="CENTER" spacing="40">
            <Label fx:id="scoreLabel"
                   text="Score: 0"
                   style="-fx-font-size: 16px; -fx-text-fill: #444;"/>
            <Label fx:id="timerLabel"
                   text="Time left: 00"
                   style="-fx-font-size: 16px; -fx-text-fill: red;"/>
        </HBox>

        <!-- Question -->
        <Label fx:id="questionLabel"
               text="Question will appear here"
               wrapText="true"
               alignment="CENTER"
               style="-fx-font-size: 18px; -fx-text-alignment: center;"/>

        <!-- Answers -->
        <VBox alignment="CENTER" spacing="15">
            <Button fx:id="answerButton1"
                    onAction="#handleAnswer1"
                    prefWidth="300"
                    style="-fx-font-size: 15px;"/>
            <Button fx:id="answerButton2"
                    onAction="#handleAnswer2"
                    prefWidth="300"
                    style="-fx-font-size: 15px;"/>
            <Button fx:id="answerButton3"
                    onAction="#handleAnswer3"
                    prefWidth="300"
                    style="-fx-font-size: 15px;"/>
        </VBox>

        <!-- Restart Button -->
        <Button fx:id="restartButton"
                text="Restart Quiz"
                onAction="#restartQuiz"
                visible="false"
                prefWidth="150"
                style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </VBox>

</StackPane>
