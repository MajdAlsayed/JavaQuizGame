<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="nl.inholland.quizgame.controller.StartController"
           stylesheets="@style.css">

    <VBox alignment="CENTER" spacing="25">
        <HBox alignment="CENTER" spacing="30">
            <Label fx:id="welcomeLabel" styleClass="top-label"/>
            <Label fx:id="scoreLabel" styleClass="top-label"/>
            <Label fx:id="timerLabel" styleClass="timer-label"/>
        </HBox>

        <!-- Question Card -->
        <VBox alignment="CENTER" spacing="20" maxWidth="650" styleClass="question-card">
            <Label fx:id="questionLabel"
                   wrapText="true"
                   styleClass="question-text"/>

            <VBox alignment="CENTER" spacing="15" maxWidth="400">
                <Button fx:id="answerButton1"
                        onAction="#selectAnswer1"
                        styleClass="answer-btn"/>
                <Button fx:id="answerButton2"
                        onAction="#selectAnswer2"
                        styleClass="answer-btn"/>
                <Button fx:id="answerButton3"
                        onAction="#selectAnswer3"
                        styleClass="answer-btn"/>
            </VBox>

            <Button fx:id="confirmButton"
                    text="Confirm Answer"
                    onAction="#handleConfirm"
                    visible="false"
                    styleClass="confirm-btn"/>

            <Button fx:id="restartButton"
                    text="Restart Quiz"
                    onAction="#restartQuiz"
                    styleClass="restart-btn"/>
        </VBox>
    </VBox>
</StackPane>
